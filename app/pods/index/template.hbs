{{#page-view scrollToTop=true}}
<div class="section no-pad-bot" id="index-banner">
	<div class="container">
		<div class="row">
			<div class="col s12 m7">
			{{company-list companyList=model infinityLoad='infinityLoad'}}
			</div>
			<div class="col s12 m5">
				<div class="toc-wrapper">
					{{#help-box helpTextCode='help.index' showYield=true}}
					<a href="#" class="waves-effect waves-light btn accent-btn white-text">{{t 'button.how_to_use'}}</a>
					{{/help-box}}			
		          	{{!top-tag tags=tags}}
					{{!#each latestQuestion as |question|}}
					{{!latest-box question=question comments=comments}}
					{{!/each}}		          	
				</div>					
			</div>
		</div>
	</div>
</div>
{{/page-view}}
