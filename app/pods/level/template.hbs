<div class="section no-pad-bot">
{{#if calendarOpen}}
{{placc-calendar onReserv=(action "onReserve") onRelease=(action "onRelease") onClose=(action "onCloseCalendar") reservations=reservations ownerId=userId}}
{{/if}}
{{#if showSVG}}
<div class="row">
<div class="col s4">
<div class="collection">
	{{#link-to 'profile.index' class="collection-item"}}{{t 'profile.reservations'}}{{/link-to}}
	{{#link-to 'profile.places' class="collection-item"}}{{t 'profile.places'}}{{/link-to}}
</div>

</div>
<div class="col s8">
<div class="myplaccsvg">
</div>
</div>
</div>
{{else}}
	<div class="container">
		<div class="row">
			<div class="col s12 m7">
			<blockquote>
			<h4>{{model.name}}</h4>
			<p>{{t "g.seats" count=model.seat.length}}</p>
    		</blockquote>
    		<div class="collection">
    		{{#each model.seat as |seat|}}
    		<a href="#" class="collection-item" {{action "setReservation" seat.id preventDefault=false}}>{{seat.name}} - reservations: {{seat.reservationCount}}</a>
    		{{/each}}
    <!--a href="#!" class="collection-item"><span class="new badge">4</span>Alan</a-->
			</div>
			
			
			</div>
			<div class="col s12 m5">
				<div class="toc-wrapper">
					{{post-question}}				
				</div>					
			</div>
		</div>
	</div>
{{/if}}
</div>

