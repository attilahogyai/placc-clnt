{{#page-view scrollToTop=true}}
<div class="section no-pad-bot" id="index-banner">
	<div class="container">
		<div class="row">
			<div class="col s12 m7">
			<blockquote>
			<h4>{{model.name}}</h4>
			<p>{{t "g.seats" count=model.seat.length}}</p>
    		</blockquote>
    		<div>
    			{{placc-calendar}}
    		</div>
    		<div class="collection">
    		{{#each model.seat as |seat|}}
    		<a href="#" class="collection-item" {{action "setReservation" seat.id preventDefault=false}}><span class="badge availability">{{t 'g.free'}}</span>{{seat.name}}</a>
    		{{/each}}
    <!--a href="#!" class="collection-item"><span class="new badge">4</span>Alan</a-->
			</div>
			
			
			</div>
			<div class="col s12 m5">
				<div class="toc-wrapper">
					{{post-question}}				
		          	{{!top-tag tags=tags}}
					{{!#each latestQuestion as |question|}}
					{{!latest-box question=question comments=comments}}
					{{!/each}}		          	
				</div>					
			</div>
		</div>
	</div>
</div>
{{/page-view}}

